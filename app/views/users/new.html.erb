<div class="row">
  <div class="col-xs-12">
    <h1>Sign Up!</h1>
  </div>
</div>

<%= render "flash_message" %> 

<% if @user.errors.any? %>
  <ul class="list-group">
    <% @user.errors.full_messages.each do |msg| %> 
      <li class="list-group-item"><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= bootstrap_form_for :user do |f|  %>

      <%= f.text_field :name, placeholder: "Name" %> <br>
      <%= f.text_field :email, placeholder: "Email" %> <br>
      <%= f.password_field :password, placeholder: "Password", icon: "lock" %> <br>
      <%= f.password_field :password_confirmation, placeholder: "Repeat Password", icon: "lock" %> <br>
      <%= f.submit :class => "btn btn-primary", icon: "user" %> 

    <% end %> 
  </div>
</div>